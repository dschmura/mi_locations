= form_for [building, @floor ||= Floor.new] do |f|
  - if @floor.errors.any?
    #error_explanation
      %h2= "#{pluralize(@floor.errors.count, "error")} prohibited this floor from being saved:"
      %ul
        - @floor.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :label
    = f.text_field :label

  .actions
    = f.submit 'Save'
