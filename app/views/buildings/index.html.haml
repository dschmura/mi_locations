
.buildings-search-bar
  = search_form_for @q do |f|
    = f.search_field :name_or_nick_name_or_abbreviation_cont
    -# = f.search_field :nick_name_or_abbreviation_cont

  = "#{@q.result.count} Matches"

.buildings-results
  - @buildings.each do |building|
    .row
      = building.name
      = building.address
      = building.city
