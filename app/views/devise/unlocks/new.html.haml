.w-full.max-w-xl.mx-auto
  %h1.font-hairline.mb-6.text-center Resend Unlock Info
  = form_for(resource,                                                       |
             as: resource_name,                                              |
             url: unlock_path(resource_name),                                |
             html: {                                                         |
                     method: :post,                                          |
                     class: "bg-white mb-4 px-8 pt-6 pb-8 rounded shadow-md" |
             }                                                               |
    ) do |f|                                                                 |
    = devise_error_messages!
    .mb-4
      = f.label :email, class: "block font-bold mb-2 text-gray-700 text-sm"
      = f.email_field :email,                                                                                                               |
        autofocus: true,                                                                                                                    |
        autocomplete: "email",                                                                                                              |
        class: "appearance-none border leading-tight focus:outline-none px-3 py-2 rounded shadow focus:ring text-gray-700 w-full" |
    .mb-4
      = f.submit "Resend unlock instructions",                                                                                              |
        class: "button bg-blue-500 hover:bg-blue-700 font-bold text-white focus:outline-none py-2 px-4 rounded focus:ring w-full" |
    = render "devise/shared/links"
  = render "devise/shared/form_footer"
