!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title= (t :sitename)
    = csrf_meta_tags
    = stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'https://maps.googleapis.com/maps/api/js?key=#{ Rails.application.credentials.google_maps_api_key }'
    - if content_for? :head
      = yield :head
  %body
    #page-top{'data-behavior' => "vue" }

      .corner-ribbon.top-right.sticky.red.shadow= link_to('Work in Progress', project_status_path)


      = render 'layouts/header'
      .content#content{:class => controller.controller_name}
        = yield

      = render 'layouts/footer'
      = debug(params) if Rails.env.development?
