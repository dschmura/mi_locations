-# - content_for :head do
-#   = javascript_pack_tag 'search_vue', 'data-turbolinks-track': 'reload'

%section
  .hero-image
    /! Promo Block Info
    .landing-page--banner
      .landing-page--brand
        = link_to image_tag(asset_pack_path('media/mi_locations/images/MiLocationsNamePlateBlue.png'), class: 'header-logo', alt: 'MiLocations Logo, link to home page.'), root_path
        / = link_to('Locations', root_path, class: 'site-name', id: root_path(anchor: 'page-top') )
      %h1.landing-page-headline Classroom Database

    -# = render 'coming_soon'
    -if Rails.env.development?
      -# = render './buildings/buildings_search_bar'

    = search_form_for @q, local: true do |f|
      .search-form.search-form-bg
        .search-form--group
          %label Building by name or nickname
          = f.search_field :name_or_nick_name_or_abbreviation_cont, class: 'search-field', "aria-describedby" => "Search by building name or nick name", "aria-label" => "Search by building name or nick name", :placeholder => "Search by building name or nick name", :type => "text"
        .search-form--secondary--group
          %label{:for => "grid-city"} School or College
          %input{:placeholder => "School of Social Work", :type => "text"}
        .search-form--secondary--group
          %label{:for => "grid-state"}
            Building(s)

          %select.search-form--buildings--select
            %option Angell Hall
            %option Burton Tower
            %option North University Building
            %option Undergraduate Sciences Building

        .search-form--button
          %button.search-form--button Search
