- content_for :head do
  = javascript_pack_tag 'search_vue', 'data-turbolinks-track': 'reload'

%section
  .hero-image
    /! Promo Block Info
    .landing-page--banner
      .landing-page--brand
        = link_to image_tag(asset_pack_path('media/mi_locations/images/MiLocationsNamePlateBlue.png'), class: 'header-logo', alt: 'MiLocations Logo, link to home page.'), root_path
        / = link_to('Locations', root_path, class: 'site-name', id: root_path(anchor: 'page-top') )
      %h1.landing-page-headline Classroom Database

    = search_form_for @q do |f|
      .landing-page--search-bar

        .landing-page-search-group

          = f.search_field :name_or_nick_name_or_abbreviation_cont, class: 'landing-page-search-field', "aria-describedby" => "Search by building name or nick name", "aria-label" => "Search by building name or nick name", :placeholder => "Search by building name or nick name", :type => "text"
          .landing-page-search-button.-mr-px
            %span
              %i.fas.fa-search
              = f.submit class: 'SearchMe'


        .landing-page-search-dropdowns.pb-4

          = link_to(buildings_path, alt: 'Buildings Map') do
            %button.landing-page-filter-by-button{:type => "submit"} Filter by Buildings

          = link_to(classrooms_path,  alt: 'Classroom Search') do
            %button.landing-page-filter-by-button{:type => "submit"} Filter by School or College

search
