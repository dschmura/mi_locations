/ Promo Block
%section
  .hero-image

    .container.text-center
      / Promo Block Info
      .landing-page--banner
        %nav.nav.landing-page--brand.text-center
          = link_to image_tag(asset_pack_path('mi_locations/images/MiLocationsNamePlateBlue.png'), class: 'header-logo', alt: 'MiLocations Logo, link to home page.'), root_path
          -# = link_to('Locations', root_path, class: 'site-name', id: root_path(anchor: 'page-top') )
        %h1.headline Classroom Database

      / End Promo Block Info
      / Form Group
      = search_form_for @q do |f|
        .landing-page--search-bar
          .row.buildings-search-field
            .input-group.mt-1.mx-4
              = f.search_field :name_or_nick_name_or_abbreviation_cont, class: 'form-control', "aria-describedby" => "Search by building name or nick name", "aria-label" => "Search by building name or nick name", :placeholder => "Search by building name or nick name", :type => "text"
              .input-group-append
                %button#button-addon2.btn.btn-success
                  %i.fas.fa-search
                    Submit
          -# %form
          -#   %input.form-control{:placeholder => "Search by building name or abbreviation", :type => "text"}
          .row.pb-4
            .col-sm-6
              = link_to(buildings_path, alt: 'Buildings Map') do
                %button.btn.btn-light{:type => "submit"}
                  Filter by Buildings
            .col-sm-6
              = link_to(classrooms_path,  alt: 'Classroom Search') do
                %button.btn.btn-light{:type => "submit"}
                  Filter by School or College


