.filter-tools
  .search-results#rooms-search-matches.inline-flex
    = @results.size
    .hidden.ml-1.sm:block= "#{ pluralize_without_count(@results.size, 'Match')}"
  .layouts
    .layout-button
      .grid-layout.active-layout{data: {action: "click->toggle#layoutToggle touch->toggle#layoutToggle", target: "toggle.layout"}}
        %i.fas.fa-th
        -# = radio_button_tag("layout", value = "grid", checked = true, id: "grid-layout")

        %label{"aria-label" => "Select grid layout", for: "layout"}
          Grid
      .list-layout{data: {action: "click->toggle#layoutToggle touch->toggle#layoutToggle", target: "toggle.layout" }}
        %i.fas.fa-list
        %label{"aria-label" => "Select list layout", for: "layout"}
          List

  .sort-by-options
    Sort:
    .sort-by-capacity.sort-by-link
      = sort_link(@q, :instructional_seating_count) do
        Capacity

    .sort-by-room-number.sort-by-link
      = sort_link(@q, :room_number) do
        Room number