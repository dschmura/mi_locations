.rooms-index-card
  - if room.room_image.attached?

    .room-image{:style=> "background-image: url('#{url_for(room.room_image)}')"}
  - else

    .room-image{:style => "background-image: url(#{asset_pack_path('media/mi_locations/images/vistas/Burton.jpg')});"}

  .border-b.px-4.pb-6.z-10
    .rooms-index-card-building-badge
      - if room.building.building_image.attached?
        = image_tag room.building.building_image, alt: "#{room.building.name.titleize}"
      - else
        .room-builiding-abbreviation.bg-badge{:style => " background-image: url(#{asset_pack_path('media/mi_locations/images/MiLocationsLogo.png')})"}

    .py-2
      = link_to room_path(room) do
        %h3.font-bold.text-2xl.mb-1
          = room.room_number
          = room.building.name.titleize
      .inline-flex.text-gray-900.items-center
        %i.fas.fa-map-marker-alt.mr-1
        = room.building.address
      %button.rooms-room-directions-button
        %i.fas.fa-map-marked-alt.rounded-full.mr-2

        Directions

    .py-2
      %button.rooms-room-alerts-button.inline-flex.text-gray-900.items-center

        .rooms-room-alerts-count
          = room.alerts.size
        Alerts
        %i.fas.fa-exclamation-triangle.mr-1
  .px-4.py-4.bg-gray-300
    .text-gray-700.mb-4.flex.flex-row
      %i.fas.fa-chalkboard
      %span.mx-3
        %strong.text-black
        = room.building.classrooms.size
        -# / = room.team_learning_classrooms?
        Classrooms
      %i.fas.fa-handshake
      .bg-scrollspan.mx-3
        %strong.text-black
        = room.building.team_learning_classrooms.size
        Team Learning Classrooms

      -# %/ i.fas.fa-flask
      -# %span.mx-3
      -#  %strong.text-black
      -#  = room.building.classrooms_labs.size
      -#  Classroom Labs
    .characteristics-row
      %h2 Room Features
      .characteristics
        - room.room_characteristics.each do |rc|

          = link_to('', 'popover')
          = room_characteristic_icon(rc).html_safe
