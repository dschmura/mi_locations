    .filter-group
      %h5.filter-title
        %i.fas.fa-video
        Projection
      .filter-checkboxes
        .filter-checkbox
          %input{:type => "checkbox", :value => "ProjDigit"}
          %label{:for => "ProjDigit"} Projection Digital Data and Video
        .filter-checkbox
          %input{:type => "checkbox", :value => "Proj35mm"}
          %label{:for => "Proj35mm"} 35mm Film
        .filter-checkbox
          %input{:type => "checkbox", :value => "ProjD-Cin"}
          %label{:for => "ProjD-Cin"} Digital Cinema Projection (DCP)

    .filter-group
      %h5.filter-title
        %i.fas.fa-laptop
        Podium Computer
      .filter-checkboxes
        INSTRUCTOR COMPUTER COMBINES THESE
        .filter-checkbox
          %input{:type => "checkbox",  :value => "InstrComp, CompPodPC, CompPodMac"}
          %label{:for => "InstrComp, CompPodPC, CompPodMac"} Instructor Computer

    .filter-group
      %h5.filter-title
        %i.fas.fa-keyboard
        Computer Classroom / Lab
      .filter-checkboxes
        .filter-checkbox
          %input{:type => "checkbox", :value => "CompMac"}
          %label{:for => "CompMac"} Mac
        .filter-checkbox
          %input{:type => "checkbox", :value => "CompPC"}
          %label{:for => "CompPC"} PC
        .filter-checkbox
          %input{:type => "checkbox", :value => "CompMac, CompPC, CompAny"}
          %label{:for => "CompMac, CompPC, CompAny"} Any

