.rooms-search-filters
  %section.filters
    .filter-group
      %h5.filter-title
        %i.fas.fa-handshake
        Team Learning

      .filter-checkboxes
        .filter-checkbox
          %input{:type => "checkbox", :value => "TeamTables"}
          %label{:for => "TeamTables"} Team Tables
        .filter-checkbox
          %input{:type => "checkbox", :value => "TeamTech"}
          %label{:for => "TeamTech"} Team Technology
        .filter-checkbox
          %input{:type => "checkbox", :value => "TeamBoard"}
          %label{:for => "TeamBoard"} Team Writing Surface

    .filter-group
      %h5.filter-title
        %i.fas.fa-chalkboard
        Writing Surface
      .filter-checkboxes
        .filter-checkbox
          %input{:type => "checkbox", :value => "Chkbrd"}
          %label{:for => "Chkbrd"} Chalkboard
