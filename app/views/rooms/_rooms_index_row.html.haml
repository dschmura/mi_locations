.d-card
  .d-left-col
    .d-building-image.row-image.h-24.w-24
      - if room.room_image.attached?
        .bg-img.bg-cover{:style => " background-image: url(#{rails_blob_url(room.building.building_image)})"}

      - else
        .bg-img.bg-badge{:style => " background-image: url(#{asset_pack_path('media/mi_locations/images/MiLocationsLogo.png')})"}

    .d-vitals

      %span
        %i.fas.fa-users
        Student Capacity
        = room.instructional_seating_count
      %span
        %i.fas.fa-handshake
        team learning

  .d-center-col

    .d-address
      = link_to room_path(room) do
        = room.room_number
        = room.building.nick_name.titleize
        = room.building.address.titleize
    %span.c-alerts
      %i.fas.fa-exclamation-triangle
      8 alerts
    .d-characteristics
      = render room.room_characteristics
  .d-actions-col
    %button
      %i.far.fa-heart
      favorite
    %button
      %i.far.fa-calendar-alt
      schedule
    %button
      %i.fas.fa-map-marker-alt
      directions
    %button
      %i.far.fa-copy
      copy