- content_for :head do
  = javascript_pack_tag 'search', 'data-turbolinks-track': 'reload'
%search.rooms-search{ "data-controller" => "toggle"}
  = render './search/search_filters', cached: true
  #filter-tools{ data: {controller: "toggle", "toggle-class" => "active-layout"}}
    = render 'filter_tools'

    #rooms-results= render 'rooms_results', cached: true

- unless @rooms.current_page == @rooms.total_pages
  #view-more
    = link_to_next_page @rooms, 'View More', remote: false
